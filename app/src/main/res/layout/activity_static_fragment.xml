<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simbirsoft.learnfragments.static_fragment.StaticFragmentActivity">
    
    <TextView
        android:id="@+id/text"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="some text"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
    
    <fragment
        android:tag="StaticFragmentTag"
        android:name="com.simbirsoft.learnfragments.static_fragment.StaticFragment"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:layout="@layout/fragment_static"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
