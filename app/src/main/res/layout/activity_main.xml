<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.simbirsoft.learnfragments.MainActivity">

    <Button
        android:id="@+id/static_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Static fragment"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/dynamic_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic fragment"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigation Menu"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewPager"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
